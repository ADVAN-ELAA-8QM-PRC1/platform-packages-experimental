  Src('src'),
  Src('gen'),
  Lib('liblinks/junit4-target.jar', sourcepath='libsrcs/junit4-target'),
  Lib('liblinks/mockito-api.jar', sourcepath='libsrcs/mockito-src'),
  Project('pixelperfect-platform'),
  AndroidFramework(),
  Output('bin'),
]

project = AndroidProject(
